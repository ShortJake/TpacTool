<Page x:Class="TpacTool.SkeletalAnimGenPages.AnimGenTailAndCopyFromLoop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpacTool.SkeletalAnimGenPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnimGenTailAndCopyFromLoop">
    <Page.DataContext>
        <Binding Path="SkeletalAnimGenTail" Source="{StaticResource Locator}"/>
    </Page.DataContext>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="63*"/>
                        <ColumnDefinition Width="737*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Dampen Stiffness" Grid.ColumnSpan="2"/>
                    <TextBox Text="{Binding DampenStiffness, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="105,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                </Grid>
                <Grid>
                    <Label Content="Mass"/>
                    <TextBox Text="{Binding Mass, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Drag Coefficient"/>
                    <TextBox Text="{Binding DragCoefficient, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Ignore Simulation First Frame"/>
                    <CheckBox IsChecked="{Binding IgnoreFrameZero, Mode=TwoWay}" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Expander Header="Simulation Base" IsExpanded="True">
                    <Frame Source="{Binding BaseMethodPageUri, Mode=OneWay}"/>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
