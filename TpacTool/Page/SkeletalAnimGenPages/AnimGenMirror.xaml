<Page x:Class="TpacTool.SkeletalAnimGenPages.AnimGenMirror"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpacTool.SkeletalAnimGenPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnimGenMirror">
    <Page.DataContext>
        <Binding Path="SkeletalAnimGenMirror" Source="{StaticResource Locator}"/>
    </Page.DataContext>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Label Content="Target Base Anim"/>
                    <TextBox Text="{Binding BaseTargetAnimName, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Target Base Anim Bone Index"/>
                    <TextBox Text="{Binding BaseTargetIndex, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Target Base Anim Frame"/>
                    <TextBox Text="{Binding BaseTargetFrame, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Mirrored Bone Index"/>
                    <TextBox Text="{Binding CopiedBoneIndex, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Time Offset"/>
                    <TextBox Text="{Binding TimeOffset, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Add From Base"/>
                    <CheckBox IsChecked="{Binding AddFromBase, Mode=TwoWay}" Margin="168,0,0,0" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
