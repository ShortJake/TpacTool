<Page x:Class="TpacTool.SkeletonIKJoint"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpacTool"
      mc:Ignorable="d" 
      d:DesignHeight="1500" d:DesignWidth="300"
      Title="SkeletonIKJoint">
    <Page.DataContext>
        <Binding Path="Skeleton" Source="{StaticResource Locator}"/>
    </Page.DataContext>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label>IK Joints</Label>
                <Grid Margin="5,0,5,5">
                    <ComboBox Text="Select A Joint"  ItemsSource="{Binding Path=SkeletonIKJoints, Mode=OneWay}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedIKJoint, Mode=TwoWay}"/>
                </Grid>
                <Grid>
                    <Label Content="Name"/>
                    <TextBox Text="{Binding SelectedIKJoint.Name, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Bone1"/>
                    <TextBox Text="{Binding SelectedIKJoint.Bone1, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Bone2"/>
                    <TextBox Text="{Binding SelectedIKJoint.Bone2, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Position"/>
                    <TextBox Text="{Binding SelectedIKJoint.Position, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Entity Space&#xD;&#xA; Rotation"/>
                    <TextBox Text="{Binding SelectedIKJoint.EntitySpaceRotation, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Twist&#xD;&#xA;Upper Limit"/>
                    <TextBox Text="{Binding SelectedIKJoint.TwistUpperLimit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Twist&#xD;&#xA;Lower Limit"/>
                    <TextBox Text="{Binding SelectedIKJoint.TwistLowerLimit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Swing 1 Limit"/>
                    <TextBox Text="{Binding SelectedIKJoint.Swing1Limit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Swing 2 Limit"/>
                    <TextBox Text="{Binding SelectedIKJoint.Swing2Limit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Button VerticalAlignment="Top" Height="24" Margin="10,10,10,0" Content="Remove IK Joint" Command="{Binding RemoveIKJointCommand, Mode=OneWay}" IsEnabled="true"/>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Button VerticalAlignment="Top" Height="24" Margin="10,10,10,0" Content="Add IK Joint" Command="{Binding AddIKJointCommand, Mode=OneWay}" IsEnabled="true"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
