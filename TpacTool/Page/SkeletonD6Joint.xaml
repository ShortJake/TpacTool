<Page x:Class="TpacTool.SkeletonD6Joint"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpacTool"
      mc:Ignorable="d" 
      d:DesignHeight="1500" d:DesignWidth="300"
      Title="SkeletonD6Joint">
    <Page.DataContext>
        <Binding Path="Skeleton" Source="{StaticResource Locator}"/>
    </Page.DataContext>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label>D6 Joints</Label>
                <Grid Margin="5,0,5,5">
                    <ComboBox Text="Select A Joint"  ItemsSource="{Binding Path=SkeletonD6Joints, Mode=OneWay}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedD6Joint, Mode=TwoWay}"/>
                </Grid>
                <Grid>
                    <Label Content="Name"/>
                    <TextBox Text="{Binding SelectedD6Joint.Name, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Bone1"/>
                    <TextBox Text="{Binding SelectedD6Joint.Bone1, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Bone2"/>
                    <TextBox Text="{Binding SelectedD6Joint.Bone2, Mode=TwoWay}" IsReadOnly="False" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Position"/>
                    <TextBox Text="{Binding SelectedD6Joint.Position, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Entity Space&#xD;&#xA; Rotation"/>
                    <TextBox Text="{Binding SelectedD6Joint.EntitySpaceRotation, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,2,0,2" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Axis Limit"/>
                    <TextBox Text="{Binding SelectedD6Joint.AxisLimit , Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Axis Lock X"/>
                    <TextBox Text="{Binding SelectedD6Joint.AxisLockX, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Axis Lock Y"/>
                    <TextBox Text="{Binding SelectedD6Joint.AxisLockY, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Axis Lock Z"/>
                    <TextBox Text="{Binding SelectedD6Joint.AxisLockZ, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Twist&#xD;&#xA;Upper Limit"/>
                    <TextBox Text="{Binding SelectedD6Joint.TwistUpperLimit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Twist&#xD;&#xA;Lower Limit"/>
                    <TextBox Text="{Binding SelectedD6Joint.TwistLowerLimit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Twist Lock"/>
                    <TextBox Text="{Binding SelectedD6Joint.TwistLock, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Swing 1 Lock"/>
                    <TextBox Text="{Binding SelectedD6Joint.Swing1Lock, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Swing 1 Limit"/>
                    <TextBox Text="{Binding SelectedD6Joint.Swing1Limit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Swing 2 Limit"/>
                    <TextBox Text="{Binding SelectedD6Joint.Swing2Limit, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Label Content="Swing 2 Lock"/>
                    <TextBox Text="{Binding SelectedD6Joint.Swing2Lock, Mode=OneWay}" IsReadOnly="True" Height="22" Margin="85,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Button VerticalAlignment="Top" Height="24" Margin="10,10,10,0" Content="Remove D6 Joint" Command="{Binding RemoveD6JointCommand, Mode=OneWay}" IsEnabled="true"/>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Button VerticalAlignment="Top" Height="24" Margin="10,10,10,0" Content="Add D6 Joint" Command="{Binding AddD6JointCommand, Mode=OneWay}" IsEnabled="true"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
