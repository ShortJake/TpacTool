<Window x:Class="TpacTool.AnimGenSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TpacTool"
        xmlns:TpacTool="clr-namespace:TpacTool"
        xmlns:loc="clr-namespace:TpacTool.Properties"
        mc:Ignorable="d"
       Title="Select Animations" Height="520" Width="320" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.DataContext>
        <Binding Path="AnimGenSelection" Source="{StaticResource Locator}"/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <StackPanel.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </StackPanel.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,10,10,5" Height="394">
            <ItemsControl  ItemsSource="{Binding ViewedAnims.View}" >
                <ItemsControl.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </ItemsControl.Background>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name, Mode=OneWay}" Margin="5,5,5,5" IsEnabled="True" IsChecked="{Binding Selected, Mode=TwoWay}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <TextBox Height="24" Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}" Margin="20,5,20,5" TextWrapping="Wrap" ToolTip="{x:Static loc:Resources.AssetTree_Filter_Tooltip}"/>
        <StackPanel Margin="10,5,10,0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Height="24" Margin="5,0,5,0" Content="Confirm" IsEnabled="{Binding CanConfirm, Mode=OneWay}" Click="ConfirmButtonClick"/>
            <Button Height="24" Margin="5,0,5,0" Content="Cancel" IsEnabled="True" Click="CloseButtonClick"/>
            <Button Height="24" Margin="5,0,5,0" Content="Select All" Command="{Binding SelectAllCommand, Mode=OneWay}" IsEnabled="True"/>
            <Button Height="24" Margin="5,0,5,0" Content="Deselect All" Command="{Binding DeselectAllCommand, Mode=OneWay}" IsEnabled="True"/>
        </StackPanel>
    </StackPanel>
</Window>
